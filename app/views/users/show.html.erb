<article id="user">
  <header>
    <%=profile_image_for(@user)%>
    <h1><%=@user.name%></h1>
    <h2><%=mail_to(@user.email)%></h2>
  </header>
  <p>
    <%if current_user?(@user) %>
  <%=link_to "Edit",edit_user_path(@user),class:'button'%>
    <%=link_to 'Delete',@user,method: :delete,class:'button'%>
        <%end%>
  </p>
</article>