<header>
<h1>Review for <%=link_to(@movie.title,@movie)%></h1>
</header>

<%=render 'shared/errors' ,object: @review%>

<%=form_for([@movie,@review]) do |f|%>
<fieldset>
  <ol>
    <li>
      <%=f.label :name%>
      <%=f.text_field :name,size:40,autofocus:true%>
    </li>
    <li>
      <%=f.label :stars%>
      <%=f.select :stars,
      Review::STARS,
      :prompt=>'Select one'%>
    </li>
    <li>
      <%=f.label :comment%>
      <%=f.text_area :comment,cols:40,placeholder:"What did you think?" %>
    </li>
  </ol>
  <p>
    <%=f.submit "Post Review"%>
    <%=link_to "Cancel",@movie,class:'button'%>
  </p>

</fieldset>
<%end%>