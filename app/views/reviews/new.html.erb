<header>
<h1>Review for <%=link_to(@movie.title,@movie)%></h1>
</header>

<%=form_for([@movie,@review]) do |f|%>
    <fieldset>
      <ol>
          <%=f.label :stars%>
          <%=f.select :stars,
                      Review::STARS,
                      :prompt=>'Select one'%>
        </li class="required_stars">
        <li>
          <div class="star">
          <% Review::STARS.each do |star|%>
                <%=star%> <%=f.radio_button :stars,star %>
              <%end%>
          </div>
        </li>
        <li>
          <%=f.label :comment%>
          <%=f.text_area :comment,cols:40,placeholder:"What did you think?" %>
        </li>
      </ol>
      <p>
        <%=f.submit "Post Review"%>
        <%=link_to "Cancel",@movie,class:'button'%>
      </p>

    </fieldset>
<%end%>